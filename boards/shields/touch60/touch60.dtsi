#include "touch60-layouts.dtsi"
#include <dt-bindings/zmk/matrix_transform.h>

/ {
    matrix_transform0: matrix_transform0 {
        compatible = "zmk,matrix-transform";
        columns = <7>;
        rows = <10>;
        map = <
            RC(0,0) RC(5,0) RC(0,2) RC(5,2) RC(0,5) RC(5,5) RC(0,6) RC(5,6) RC(6,4) RC(0,4) RC(5,4) RC(1,3) RC(6,3) RC(0,3)
            RC(1,0) RC(6,0) RC(1,2) RC(6,2) RC(1,5) RC(6,5) RC(1,6) RC(6,6) RC(2,4) RC(7,4) RC(1,4) RC(2,3) RC(7,3) RC(5,3)
            RC(2,0) RC(7,0) RC(2,2) RC(7,2) RC(2,5) RC(7,5) RC(2,6) RC(7,6) RC(8,6) RC(3,6) RC(8,4) RC(8,3) RC(3,3)
            RC(8,0) RC(3,0) RC(8,2) RC(3,2) RC(4,5) RC(9,5) RC(8,5) RC(3,5) RC(4,6) RC(9,6) RC(3,4) RC(9,3)
            RC(9,0) RC(4,0) RC(9,2) RC(4,2) RC(4,4) RC(9,4) RC(4,3) RC(4,1)
        >;
    };
};

&physical_layout_touch60 {
    transform = <&matrix_transform0>;
};

// Input devices
/ {
    split_inputs {
        #address-cells = <1>;
        #size-cells = <0>;

        input_split_unibody0: input_split_unibody0@0 {
            compatible = "zmk,input-split";
            reg = <0>;
            status = "disabled";
        };
    };

    input_listener_unibody0: input_listener_unibody0 {
        compatible = "zmk,input-listener";
        status = "disabled";
        device = <&input_split_unibody0>;
    };
};

